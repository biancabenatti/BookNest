{
    "version": 2,
    "builds": [
      { "src": "api/**/*.js", "use": "@vercel/node" },
      { "src": "public/**/*", "use": "@vercel/static" }
    ],
    "rewrites": [
      {
        "source": "/api/:path*",
        "destination": "/api/index.js"
      },
      {
        "source": "/:path*",
        "destination": "/public/index.html"
      }
    ]
  }
  